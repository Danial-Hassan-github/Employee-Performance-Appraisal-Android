<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.StudentMainActivity">

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Courses"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/bottomBar" />

    <TextView
        android:id="@+id/txt_student_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:text="Name: Asad\n2020-ARID-3999\nBSCS-6D"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_student_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_degree_exit_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Degree Exit" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_confidential_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidential Evaluation" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Your main content layout -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>