<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PerformanceFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/performance_type_tab"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_multi_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi-Session"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_employee_comparison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparison"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_employee_multi_session_comparison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi-Session Comparison"/>

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:text="Munir Ahmed"
        android:padding="10dp"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/course_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/txtCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"/>
        <Spinner
            android:id="@+id/spinner_course"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Course Performance"/>

    <LinearLayout
        android:id="@+id/session_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session"/>
            <Spinner
                android:id="@+id/spinner_session"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btn_show"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_weight="3"-->
<!--            android:text="Show"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colleague_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtColleague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Colleague"/>
            <Spinner
                android:id="@+id/spinner_colleague"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comparison_sessions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_session_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"/>
            <Spinner
                android:id="@+id/spinner_session_from"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_session_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"/>
            <Spinner
                android:id="@+id/spinner_session_to"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btn_compare"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_weight="3"-->
<!--            android:text="Compare"/>-->

    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:visibility="visible"
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.mikephil.charting.charts.BarChart
        android:visibility="gone"
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>